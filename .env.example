# ─── App ──────────────────────────────────────────────
NODE_ENV=development # development, production, test
PORT=3000

# Comma-separated list of allowed CORS origins (leave blank to allow all)
ALLOWED_ORIGINS=http://localhost:8081,http://localhost:3001

# ─── Database ─────────────────────────────────────────
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=chat_db # in postgres, username should be the same as the database name
DB_NAME=chat_db
DB_PASSWORD=chat_password

# ─── JWT ──────────────────────────────────────────────
# Generate a strong secret: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=CHANGE_ME_TO_A_STRONG_RANDOM_SECRET
JWT_EXPIRES_IN=7d